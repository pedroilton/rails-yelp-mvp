<div class="container">
  <h1>New Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
<br>
<%= link_to 'Back to restaurant list', restaurants_path %>