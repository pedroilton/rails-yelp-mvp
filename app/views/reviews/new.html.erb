<div class="container">
  <h1>New Review</h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
<br>
<%= link_to "Back to #{@restaurant.name}", @restaurant %>
<br>
<%= link_to 'Back to restaurant list', restaurants_path %>